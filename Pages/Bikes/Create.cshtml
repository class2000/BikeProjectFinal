@page
@model BikeProjectFinal.Pages.Bikes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bike.Brand" class="control-label"></label>
                <input asp-for="Bike.Brand" class="form-control" />
                <span asp-validation-for="Bike.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Model" class="control-label"></label>
                <input asp-for="Bike.Model" class="form-control" />
                <span asp-validation-for="Bike.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Price" class="control-label"></label>
                <input asp-for="Bike.Price" class="form-control" />
                <span asp-validation-for="Bike.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.RestockDate" class="control-label"></label>
                <input asp-for="Bike.RestockDate" class="form-control" />
                <span asp-validation-for="Bike.RestockDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.ProviderID" class="control-label">Provider Name</label>
                <select asp-for="Bike.ProviderID" class="form-control" asp-items="ViewBag.ProviderID" ></select>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedTypeDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedTypes"
                                               value="@cat.TypeID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.TypeID @: @cat.Name




                                    @:</td>


                                }
                            @:</tr>
                            }
                        </table>
                </div>
            </div>
                 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
