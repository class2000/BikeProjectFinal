@page "/{id:int?}"
@model BikeProjectFinal.Pages.Bikes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].RestockDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Provider.ProviderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].BikeTypes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BikeD.Bikes) {
    string selectedRow = "";
    if(item.ID == Model.BikeID)
    {
        selectedRow = "table-succes";
    }

    <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestockDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.ProviderName)
            </td>
            <td>
                @{ 
                    foreach (var type in item.BikeTypes)
                    {
                        @type.Type.ID @: @type.Type.TypeName <br/>
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
